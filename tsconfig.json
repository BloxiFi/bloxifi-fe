{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2018",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["apps/web/src/*"]
    }
  },
  "exclude": [
    "**/downloads/**/*",
    "node_modules",
    "**/dist/**/*",
    "**/__tests__/**/*",
    "**/__mocks__/**/*"
  ]
}
